<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sparmeplease">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sparmeplease"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sparmeplease"
        android:supportsRtl="true"
        android:theme="@style/Theme.sparmeplease">
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="SparMePlease"/>
        <activity
            android:name=".NewItemActivity"
            android:exported="true"/>
        <activity
            android:name=".ItemDetails"
            android:exported="true" />

    </application>

</manifest>